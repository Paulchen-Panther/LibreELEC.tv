<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="@PKG_ADDON_ID@"
       name="@ADDON_NAME@"
       version="@ADDON_VERSION@"
       provider-name="@PROVIDER_NAME@">
  <extension point="kodi.resource.images" compile="true" type="studios" />
  <requires>
    <import addon="os.libreelec.tv" version="@OS_VERSION@"/>
    <import addon="kodi.resource" version="1.0.0"/>@REQUIRES@
  </requires>
  <extension point="xbmc.addon.metadata">
    <summary>@PKG_SHORTDESC@</summary>
    <description>@PKG_LONGDESC@</description>
    <disclaimer>@PKG_DISCLAIMER@</disclaimer>
    <platform>all</platform>
  </extension>
</addon>
